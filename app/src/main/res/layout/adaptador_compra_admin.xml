<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imagenCadmin"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerInParent="true"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/imagen_vacia"></ImageView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:padding="15dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/estadoConfiCadmin"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/DiaCadmin"
                        android:layout_width="59dp"
                        android:layout_height="48dp"
                        android:hint="Dia"
                        android:inputType="number"
                        android:singleLine="false"></EditText>
                    <EditText
                        android:id="@+id/MesCadmin"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:hint="Mes"
                        android:inputType="number"
                        android:singleLine="false">
                    </EditText>
                    <EditText
                        android:id="@+id/AnioCadmin"
                        android:layout_width="70dp"
                        android:layout_height="48dp"
                        android:hint="AÃ±o"
                        android:inputType="number"
                        android:singleLine="false">
                    </EditText>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/guardarCadmin"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/verde"
                        android:drawableRight="@drawable/baseline_save_24"
                        android:drawableTint="@color/white"
                        android:text="Guardar"
                        android:textColor="@color/white"
                        android:textSize="17dp">

                    </Button>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nombreUserCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre usuario"
                    android:textColor="@color/naranjo"
                    android:textSize="25dp"
                    android:paddingLeft="22dp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nombreCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textColor="@color/rojo"
                    android:textSize="25dp"
                    android:paddingLeft="22dp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/precioCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textColor="@color/azul"
                    android:textSize="22dp"
                    android:paddingLeft="22dp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cantidadCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:text="Cantidad"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:textColor="@color/naranjo"
                    android:text="Fecha de compra:"
                    android:textSize="20dp">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fechaCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:text="No disponible"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:text="Fecha de retiro:"
                    android:textColor="@color/naranjo"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fechaRCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="22dp"
                    android:text="No disponible"
                    android:textSize="20dp"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/estadoCadmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="@color/verde"
                    android:textSize="20dp"
                    android:paddingLeft="22dp">
                </TextView>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/eliminarCadmin"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/rojo"
                android:drawableRight="@drawable/baseline_delete_24"
                android:drawableTint="@color/white"
                android:text="Eliminar producto"
                android:textColor="@color/white"
                android:textSize="20dp">

            </Button>
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>